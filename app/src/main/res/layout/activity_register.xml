<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.RegisterActivity"
    android:background="@drawable/registers">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:id="@+id/txt_U_UserId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="ENTER USER ID"
            android:inputType="text" />

        <EditText
            android:id="@+id/txt_P_Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="ENTER PASSWORD"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/txt_P_ComfirtPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="ENTER COMFIRM PASSWORD"
            android:inputType="textPassword" />

        <Spinner
            android:id="@+id/spn_S_Spinner"
            android:layout_width="match_parent"
            android:layout_height="47dp" />

        <Button
            android:id="@+id/btn_R_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#8B78D1"
            android:text="REGISTER" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>